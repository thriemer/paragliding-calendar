{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "PORT=3001 bun --hot src/index.ts",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "postinstall": "bun2nix -o bun.nix"
  },
  "dependencies": {
    "@gorules/jdm-editor": "^1.51.2",
    "@gorules/zen-engine-wasm": "^0.23.0",
    "leaflet": "^1.9.4",
    "react": "^19",
    "react-dom": "^19",
    "react-leaflet": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "latest",
    "@types/leaflet": "^1.9.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "jsdom": "^28.1.0"
  }
}
